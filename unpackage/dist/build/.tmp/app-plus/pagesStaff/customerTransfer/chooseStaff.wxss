
.authority_cont{
    padding: 50rpx 0 200rpx 50rpx;
    box-sizing: border-box;
    width: 100%;
}
.authority_label{
    margin-bottom: 36rpx;
}
.authority_label_info{
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.authority_icon{
    width: 40rpx;
    height: 40rpx;
    margin: 30rpx 40rpx auto 0;
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
}
.cust_view{
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    padding-bottom: 40rpx;
    border-bottom: solid 1px #ebebeb;
}
/*底部按钮*/
.next-btn{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 190rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    background-color: #ffffff;
    z-index: 9;
}
.next-btn>view{
    width: 670rpx;
    height: 98rpx;
    background-color: #0084ff;
    box-shadow: 0px 7px 15px 1px rgba(0, 0, 0, 0.05);
    border-radius: 10rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    color: #ffffff;
    font-family: PingFang-SC-Bold;
    font-size: 32rpx;
}
.broker_avatar{
    width: 94rpx;
    height: 94rpx;
    margin: auto 35rpx auto 0;
    border-radius: 100%;
}
.name{
    font-family: PingFang-SC-Bold;
    font-size: 32rpx;
    line-height: 32rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #191f25;
    -webkit-flex-shrink:0;
            flex-shrink:0;
    margin: auto 30rpx 15rpx 0;
}
.phone{
    font-family: PingFang-SC-Bold;
    font-size: 28rpx;
    line-height: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #a3a5a8;
    -webkit-flex-shrink:0;
            flex-shrink:0;
    margin: auto 30rpx auto 0;
}

