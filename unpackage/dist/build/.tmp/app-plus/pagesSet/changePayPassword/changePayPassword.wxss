
page{
    width: 100%;
    height: 100%;
    background: #ffffff;
}
.forget_view{
    width: 100%;
}
.forget_cont{
    padding: 0 40rpx;
    box-sizing: border-box;
    background: #ffffff;
    width: 100%;
}
.forget_item{
    height: 110rpx;
    line-height: 110rpx;
    padding-right: 30rpx;
    border-bottom: 1px solid #e7e7e7;
    box-sizing: border-box;
}
.forget_title{
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
    text-align: left;
    width: 220rpx;
    font-family: PingFang-SC-Bold;
    font-size: 30rpx;
    font-weight: bold;
    font-stretch: normal;
    color: #191f25;
}
.forget_right{
    width: 100%;
}
.input_val{
    height: 32rpx;
    line-height: 32rpx;
    margin: auto 0;
    font-size: 30rpx;
    color: #191f25;
    text-align: left;
    padding-right: 20rpx;
    box-sizing: border-box;
    width: 100%;
}
.show_key{
    width: 40rpx;
    height: 40rpx;
}
.hide_key{
    width: 40rpx;
    height: 19rpx;
}
.icon_view{
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
    width: 50rpx;
    height: 100%;
    text-align: right;
}
.password_icon{
    margin: auto 0 auto auto;
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
}
.confirm_view{
    padding: 0 40rpx;
    box-sizing: border-box;
    width: 100%;
    margin-top: 60rpx;
}
.confirm_btn{
    width: 100%;
    line-height: 100rpx;
    text-align: center;
    height: 100rpx;
    background-color: #0084ff;
    border-radius: 10rpx;
    box-sizing: border-box;
    font-size: 32rpx;
    color: #ffffff;
}

