
page{
    width: 100%;
    height: 100%;
    background: #ffffff;
    box-sizing: border-box;
}
.title-view{
    height: calc(var(--status-bar-height) + 60rpx);
    background: #ffffff;
}
.message_view{
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.top_cont{
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 40rpx;
    box-sizing: border-box;
    -webkit-box-flex: 0;
    -webkit-flex: 0;
            flex: 0;
    background-color: #ffffff;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.top_cont_text{
    font-family: PingFang-SC-Bold;
    font-size: 48rpx;
    font-weight: bold;
    font-stretch: normal;
    color: #191f25;
}
.list_person_view{
    height: 100%;
    width: 80rpx;
}
.list_person{
    width: 45rpx;
    height: 34rpx;
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
    margin: auto 0 auto auto;
}
.no_list_view{
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    background: #ffffff;
    height: 100%;
}
.no_list_view>image{
    width: 374rpx;
    height: 155rpx;
    margin: -100rpx auto 0;
}
.no_list_view>view{
    text-align: center;
    line-height: 30rpx;
    margin-top: 50rpx;
    font-size: 30rpx;
    color: #c0c1c3;
}
.item_cont{
    height: calc(100% - 80rpx - var(--status-bar-height) - 60rpx);
    overflow-y: auto;
    overflow-x: hidden;
}
.item_list{
    padding-left: 40rpx;
    background: #ffffff;
    width: 100%;
    box-sizing: border-box;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
}
.message_item{
    background: #ffffff;
    height: 150rpx;
    box-sizing: border-box;
    -webkit-transition:0.5s;
    transition:0.5s;
    -webkit-transform: translateX(0);
            transform: translateX(0);
    position: relative;
}
.message_item_top{
    position: absolute;
    right: -8rpx;
    top: -8rpx;
    width: 0;
    height: 0;
    border-width: 14rpx;
    border-style: solid;
    border-color: transparent #abccef transparent transparent;
    -webkit-transform: rotate(135deg);
            transform: rotate(135deg); /*顺时针旋转90°*/
}
.message_left{
    -webkit-transform: translateX(-244rpx);
            transform: translateX(-244rpx);
}
.right_btn_view{
    position: absolute;
    right: -244rpx;
    top: 0;
    height: 100%;
    width: 244rpx;
    background: #FFFFFF;
    border-bottom: 1rpx solid #f5f5f5;
    line-height: 150rpx;
}
.ping_bi_btn{
    color:#FFFFFF;
    text-align:center;
    width:130rpx;
    letter-spacing:1px;
    background-color:#3396fb;
    font-size:24rpx;
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
}
.del_btn{
    color:#FFFFFF;
    font-size:24rpx;
    float:right;
    width: 100%;
    text-align:center;
    letter-spacing:1px;
    background-color:#ff3d43;
}
.head_img_view{
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    background: #FFFFFF;
    box-sizing: border-box;
    margin: auto 30rpx auto 0;
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
    position: relative;
}
.point{
    height: 34rpx;
    min-width: 34rpx;
    background-color: #ff3d43;
    line-height:34rpx;
    padding: 0 10rpx;
    font-size:22rpx;
    color:#FFFFFF;
    text-align:center;
    border-radius:20rpx;
    margin: auto 0;
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
    box-sizing: border-box;
    margin-left: 10rpx;
}
.empty_view{
    height: 30rpx;
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
}
.head_img_view image{
    width: 100%;
    height: 100%;
    border-radius: 100%;
}
.message_cont{
    margin: auto 0;
    box-sizing: border-box;
    text-align: left;
    width: calc(100% - 116rpx);
    padding-right: 30rpx;
    height: 150rpx;
    border-bottom: 1rpx solid #ebebeb;
}
.message_top{
    line-height: 46rpx;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.massage_name_view{
    width: 75%;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    height: 36rpx;
    line-height: 36rpx;
}
.massage_name{
    text-align: left;
    color: #191f25;
    font-weight: bold;
    font-size: 32rpx;
    max-width: 100%;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.massage_compName{
    background: #ffffff;
    color: #a3a5a8;
    font-size: 22rpx;
    text-align: center;
    height: 35rpx;
    line-height: 35rpx;
    padding: 0 10rpx;
    margin: auto 0 auto 10rpx;
    border-radius: 4rpx;
    max-width: 46%;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
    border: 1rpx solid rgb(125,129,132,0.2);
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.message_last_time{
    text-align: right;
    font-size: 22rpx;
    color: #a3a5a8;
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
}
.msg_text_view{
    margin-top: 6rpx;
    line-height: 40rpx;
    width: 100%;
    min-height: 40rpx;
}
.msg_text{
    width: 100%;
    color: #a3a5a8;
    font-size: 26rpx;
    max-width: 100%;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

