
.no_layout{
    font-size: 28rpx;
    color: #191f25;
    margin-right: 10rpx;
}
.area{
    font-family: PingFang-SC-Medium;
    font-size: 28rpx;
    -webkit-flex-shrink:0;
            flex-shrink:0;
    font-weight: normal;
    font-stretch: normal;
    line-height: 32rpx;
    letter-spacing: 0rpx;
    color: #a3a5a8;
    margin: auto 0 auto 0;
}
.amount{
    font-family: PingFang-SC-Medium;
    font-size: 28rpx;
    -webkit-flex-shrink:0;
            flex-shrink:0;
    font-weight: normal;
    font-stretch: normal;
    line-height: 32rpx;
    letter-spacing: 0rpx;
    color: #a3a5a8;
    margin: auto 0rpx auto auto;
}
page{
    width: 100%;
    height: 100%;
    background: #f6f6f6;
}
.forget_view{
    width: 100%;
}
.forget_cont{
    padding-left: 30rpx;
    background: #ffffff;
    width: 100%;
    box-sizing: border-box;
}
.forget_item{
    height: 110rpx;
    line-height: 110rpx;
    padding-right: 30rpx;
    border-bottom: 1px solid #e7e7e7;
    box-sizing: border-box;
}
.forget_item:last-child{
    border-bottom: none;
}
.forget_title{
    font-weight: bold;
    font-stretch: normal;
    color: #191f25;
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
    font-size: 28rpx;
    text-align: left;
    width: 150rpx;
}
.forget_right{
    width: 75%;
}
.forget_right_f{
    width: 100%;
}
.forget_right_c{
    width: 74%;
}
.input_val{
    height: 32rpx;
    line-height: 32rpx;
    margin: auto 0;
    font-size: 28rpx;
    color: #333333;
    text-align: right;
    width: 100%;
    padding-right: 20rpx;
    box-sizing: border-box;
}
.confirm_btn{
    width: 100%;
    line-height: 90rpx;
    text-align: center;
    height: 90rpx;
    background-color: #388cff;
    border-radius: 6rpx;
    box-sizing: border-box;
    font-size: 32rpx;
    color: #ffffff;
}
.confirm_view{
    padding: 0 30rpx;
    box-sizing: border-box;
    width: 100%;
    margin-top: 40rpx;
}
.forget_item .active{
    color: #191f25;
}
.right_icon{
    width: 14rpx;
    height: 28rpx;
    margin: auto 0 auto auto;
}
.uniapp_pic{
    width: 97%;
    color: #c0c1c3;
    font-family: PingFang-SC-Medium;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: auto;
    margin-bottom: auto;
    text-align: right;
}

