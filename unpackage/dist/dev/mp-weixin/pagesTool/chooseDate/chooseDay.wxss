page,
.cont {
  width: 100%;
  background: #ffffff;
  height: 100%;
}
.top_view {
  height: 282rpx;
  width: 100%;
}
.scroll_view {
  height: calc(100% - 282rpx);
}
.week_item {
  background: #ffffff;
  margin-bottom: 34rpx;
}
.week_title {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  padding: 0 40rpx;
}
.week_title_text {
  font-weight: bold;
  text-align: center;
  font-family: PingFang-SC-Bold;
  font-size: 34rpx;
  font-stretch: normal;
  color: #191f25;
  border-bottom: 1rpx solid #f5f5f5;
  width: 100%;
}
.week_content {
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  padding-left: 24rpx;
  box-sizing: border-box;
  position: relative;
}
.week_content_info {
  position: relative;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  background-color: transparent;
}
.month_bg {
  font-size: 250rpx;
  text-align: center;
  left: 50%;
  top: 50%;
  color: #f7f7f7;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  margin-top: -31%;
  line-height: 1;
}
.week_content_item {
  z-index: 9;
  position: relative;
  height: 54rpx;
  width: 13.5%;
  line-height: 54rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  font-family: PingFang-SC-Medium;
  font-size: 30rpx;
  font-weight: normal;
  font-stretch: normal;
  color: #191f25;
  text-align: center;
  margin-bottom: 30rpx;
}
.week_content .week_content_disabled {
  color: #191f25;
  opacity: 0.4;
}
.week_content .week_content_active {
  background: #0084ff;
  color: #ffffff;
  border-radius: 5rpx;
}
.week_content .week_content_active_other {
  background: rgba(0, 132, 255, 0.08);
  color: #191f25;
}
.week_content .week_content_active_red {
  color: #f09a37;
}
.top_fixed {
  position: fixed;
  left: 0;
  width: 100%;
  top: 0;
  background: #ffffff;
  z-index: 99;
}
.top_date_cont {
  background-color: #ffffff;
  box-shadow: 0 4rpx 8rpx 0 rgba(0, 0, 0, 0.05);
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 0 60rpx 40rpx;
  z-index: 99;
}
.top_date_item {
  padding-top: 27rpx;
  width: 184rpx;
}
.top_date_line {
  width: 58rpx;
  height: 78rpx;
  margin: auto;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  position: relative;
}
.top_date_line::after {
  position: absolute;
  content: "";
  width: 1rpx;
  background: #ebebeb;
  top: 0;
  right: 29rpx;
  height: 85rpx;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
}
.top_date_title {
  font-family: PingFang-SC-Medium;
  font-size: 24rpx;
  line-height: 24rpx;
  height: 24rpx;
  font-weight: normal;
  font-stretch: normal;
  color: #c0c1c3;
}
.top_date_month {
  font-family: PingFang-SC-Bold;
  font-size: 40rpx;
  line-height: 40rpx;
  height: 40rpx;
  font-weight: bold;
  color: #191f25;
  margin: 20rpx auto 20rpx 0;
}
.top_date_week {
  font-family: PingFang-SC-Medium;
  font-size: 24rpx;
  line-height: 24rpx;
  height: 24rpx;
  font-weight: normal;
  font-stretch: normal;
  color: #191f25;
}
.top_week_cont {
  margin-top: 5rpx;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  padding-left: 24rpx;
  box-sizing: border-box;
  height: 54rpx;
  background-color: #fafafa;
}
.top_week_content_item {
  height: 54rpx;
  width: 13.5%;
  line-height: 54rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  font-family: PingFang-SC-Medium;
  font-weight: normal;
  font-stretch: normal;
  text-align: center;
  font-size: 24rpx;
  color: #7d8184;
}
.bottom_view {
  width: 100%;
  height: 180rpx;
}
.bottom_fixed {
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  background-color: #fff;
  width: 100%;
  padding: 40rpx;
  z-index: 99;
  box-sizing: border-box;
}
.bottom_fixed button {
  margin: 0 auto;
  width: 100%;
  height: 100rpx;
  background-color: #0084ff;
  box-shadow: 0 7rpx 15rpx 1rpx rgba(0, 0, 0, 0.05);
  border-radius: 10rpx;
  color: #ffffff;
  font-family: PingFang-SC-Bold;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  line-height: 100rpx;
}

